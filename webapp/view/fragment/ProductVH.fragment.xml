<core:FragmentDefinition
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
>
    <ValueHelpDialog
        title="{i18n>Product}"
        ok=".onValueHelpOkReturn($event, 'PRODUCT')"
        cancel=".onValueHelpCancelPress"
        afterClose=".onValueHelpAfterClose"
        key="Product"
        descriptionKey="ProductDescription"
    >
        <filterBar>
            <fb:FilterBar
                advancedMode="true"
                search=".onFilterBarSearch"
                isRunningInValueHelpDialog="true"
            >
                <fb:filterGroupItems>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
